{
  "env": {
    "mocha": true,
    "node": true
  },
  "rules": {
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs"],
    "camelcase": 1,
    "curly": 2,
    "dot-notation": 0,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true,
      "align": "value"
    }],
    "max-depth": [1, 3],
    "max-statements": [1, 15],
    "max-len": [1, 80],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 1,
    "no-multi-spaces": [1, {
      "exceptions": {
        "VariableDeclarator": true
      }
    }],
    "no-process-exit": 0,
    "no-trailing-spaces": 2,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": 1,
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"],
    "space-after-keywords": [2, "always"],
    "object-curly-spacing": [2, "never"],
    "computed-property-spacing": [2, "never"],
    "array-bracket-spacing": [2, "never"],
    "space-unary-ops": [1, { "words": true, "nonwords": false }]
  }
}
